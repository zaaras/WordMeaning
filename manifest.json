{
  "manifest_version": 2,

  "name": "InstaMeaning",
  "description": "This extension displays meanings/definitions of a highlighted word immediately",
  "version": "1.0",

  "permissions": ["contextMenus"],
  
  "icons": {
      "16": "dictionary.gif"
  },

  "background": {
    "persistent": false,
    "scripts": ["wordmeaning.js"]
  },

  "browser_action": {
    "default_icon": "dictionary.gif"
  }
}
